{
  "name": "example",
  "version": "1.0.0",
  "description": "Example for the talk",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "pm2": "pm2 start ecosystem.json --env=production && pm2 logs",
    "dev": "node-dev --harmony-async-await --no-notify src/app",
    "start": "npm run db:setup && npm run dev",
    "test:integration": "mocha 'test/integration/**/*.js' --trace-warnings",
    "test:unit": "mocha 'test/unit/**/*.js' --trace-warnings",
    "test:coverage": "istanbul cover  _mocha -- test/integration/** test/unit/**",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "ci": "npm run db:start && npm run db:migrate && npm run test",
    "db:migrate": "node ./db/migrate",
    "db:seed": "node ./db/seed",
    "db:start": "docker-compose up -d && sleep 3",
    "db:stop": "docker-compose stop",
    "db:restart": "npm run db:stop && npm run db:start",
    "db:setup": "npm run db:start && npm run db:migrate && npm run db:seed"
  },
  "engines": {
    "node": "7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "github.com/markelog/example"
  },
  "author": "Oleg Gaidarenko <markelog@gmail.com>",
  "bugs": {
    "url": "https://github.com/markelog/example/issues"
  },
  "homepage": "https://github.com/markelog/example#readme",
  "dependencies": {
    "concurrency-logger": "^2.0.1",
    "kcors": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-favicon": "^2.0.0",
    "koa-router": "^7.1.0",
    "parse-database-url": "^0.3.0",
    "pg": "^6.1.2",
    "pm2": "^2.4.0",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.5.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "eslint-config-sexy": "^0.0.10",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "node-dev": "^3.1.3",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "supertest": "^3.0.0",
    "supertest-koa-agent": "^0.3.0"
  }
}
